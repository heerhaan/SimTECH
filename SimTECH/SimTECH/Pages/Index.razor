@page "/"

@inject ProtectedLocalStorage LocalStorage
@inject SimAuthenticationStateProvider AuthenticationProvider
@inject NavigationManager Nav
@attribute [AllowAnonymous]

<PageTitle>Home</PageTitle>

<MudContainer Class="mt-16 px-8" MaxWidth="MaxWidth.False">
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                <MudCountrySelect @bind-Value="_selectedCountry" />

                <MudText>@exampleStore</MudText>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                <h1>Hello, world!</h1>
                Welcome to your new app.
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                <CountryFlag Code="_selectedCountry" IncludeName="true" />

                <MudButton OnClick="(async () => await SetExample(newExampleString))">SetExample</MudButton>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6">
            <MudGrid>
                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                        <AuthorizeView>
                            <Authorized>
                                <p>Damn @(AuthenticationProvider.CurrentUser?.FullName ?? "wtf who"), good to see you logged in.</p>
                            </Authorized>
                            <NotAuthorized>
                                <p>What are you doing here, mate. You aren't even logged in!</p>
                            </NotAuthorized>
                        </AuthorizeView>
                    </MudPaper>
                </MudItem>

                <MudItem xs="12">
                    <MudPaper Elevation="2" Class="pa-4" Style="height: 200px;">
                        <AuthorizeView Roles="admin">
                            <Authorized>
                                <p>O damn, hello Mr. Admin! Love yo see ya :)</p>
                            </Authorized>
                        </AuthorizeView>
                    </MudPaper>
                </MudItem>
            </MudGrid>
        </MudItem>

        <MudItem xs="12" sm="6">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 100%">
                <AuthorizeView Policy="CoolOnly">
                    <Authorized>
                        <p>Good to see some cool dudes here</p>
                    </Authorized>
                    <NotAuthorized>
                        <p>No offense, but you're kinda cringe... lol</p>
                    </NotAuthorized>
                </AuthorizeView>

                <AuthorizeView Policy="ChoicePolicy" Resource="3">
                    <Authorized>
                        <p>But man, you wouldn't believe the cringe-worthy dudes that show up here.</p>
                    </Authorized>
                    <NotAuthorized>
                        <p>Christ mate, why are you like the way you are.</p>
                    </NotAuthorized>
                </AuthorizeView>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

@code {
    public Country _selectedCountry { get; set; } = Country.NL;
    private string exampleStore = "nothing stored yo";
    private string newExampleString = "this is a new example string for storage";

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var storedExample = await LocalStorage.GetAsync<string>("example");
        exampleStore = storedExample.Success ? storedExample.Value : "yikes, really nothing stored yo";
    }

    private async Task SetExample(string text) => await LocalStorage.SetAsync("example", text);

    private void NavigateHome()
    {
        Nav.NavigateTo("/drivers");
    }
}
