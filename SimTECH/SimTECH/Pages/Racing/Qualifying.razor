@page "/qualifying/{RaceId:long}"

@inject RaceService _raceService
@inject NavigationManager Nav

@if (loading)
{
    <MudAlert Severity="Severity.Warning">This bad boi is still loading, some patience please!</MudAlert>
}
else
{
