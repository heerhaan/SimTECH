@inject TeamService TeamService

<MudDialog>
    <TitleContent>
        <MudText>
            Create new team
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@team">
            <MudTextField T="string" @bind-Value="@team.Name" Label="Name" />
            <MudCountrySelect @bind-Value="team.Country" />
            <MudTextField T="string" @bind-Value="@team.Biography" Label="Biography" />
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    protected MudDialogInstance? TeamDialog { get; set; }

    [Parameter]
    public Team team { get; set; } = new();

    private async Task Submit()
    {
        // TODO: Function call just adds it here, but we want to actually store it!
        await TeamService.CreateTeam(team);

        TeamDialog?.Close(DialogResult.Ok(team));
    }

    private void Cancel() => TeamDialog?.Cancel();
}
