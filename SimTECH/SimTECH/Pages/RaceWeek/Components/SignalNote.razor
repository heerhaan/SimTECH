<MudPaper Class="absolute overflow-visible signal-icon" Style="@_styles">
    <MudIcon Icon="@Signal.GetEventIcon()"
             Size="@Size"
             Color="@Signal.GetSignalColour()" />
</MudPaper>

@code {
    [Parameter] public double LapPercentage { get; set; }

    [Parameter] public RacerEvent Signal { get; set; }

    [Parameter] public Size Size { get; set; } = Size.Small;

    private string _styles
    {
        get
        {
            var styles = $"margin-left:{LapPercentage}%";

            styles += "; line-height:0; background-color:var(--mud-palette-surface)";

            if (Signal.HasFlag(RacerEvent.Death))
                styles += "; color: white";

            return styles;
        }
    }
}
