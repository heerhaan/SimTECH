<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">Select from which season to copy entrants</MudText>
    </TitleContent>
    <DialogContent>
        <MudSelect T="long" @bind-Value="seasonToCopyFrom" Label="Season">
            @foreach (var season in Seasons)
            {
                <MudSelectItem Value="season.Id">
                    Season @season.Year of @season.LeagueId
                </MudSelectItem>
            }
        </MudSelect>
        <MudDivider />
        <MudText>Selected: @seasonToCopyFrom</MudText>
        <MudText>Expect a preview of the candidates in the future here</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] protected MudDialogInstance? EntrantDialog { get; set; }
    [Parameter] public List<Season> Seasons { get; set; }

    long seasonToCopyFrom;

    private void Submit()
    {
        EntrantDialog?.Close(DialogResult.Ok(seasonToCopyFrom));
    }

    private void Cancel() => EntrantDialog?.Cancel();
}
