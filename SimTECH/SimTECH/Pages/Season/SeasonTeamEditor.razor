<MudDialog>
    <TitleContent>
        <MudText>Modify season team</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@Model">
            @if (Model.Id == 0 && Teams is not null)
            {
                <MudSelect T="long" @bind-Value="@Model.TeamId" Label="Team">
                    @foreach (var team in Teams)
                    {
                        <MudSelectItem Value="team.Id">
                            <CountryFlag Code="team.Country" Size="FlagSize.Tiny" />
                            @team.Name
                        </MudSelectItem>
                    }
                </MudSelect>
            }

            <MudTextField @bind-Value="@Model.Name" Label="Name" Required />
            <MudTextField @bind-Value="@Model.Principal" Label="Principal" Required />
            <MudColorPicker @bind-Text="@Model.Colour" Label="Colour" DisableAlpha="true" />
            <MudColorPicker @bind-Text="@Model.Accent" Label="Accent" DisableAlpha="true" />
            <MudNumericField @bind-Value="@Model.BaseValue" Label="BaseValue" />
            <MudNumericField @bind-Value="@Model.Aero" Label="Aero" />
            <MudNumericField @bind-Value="@Model.Chassis" Label="Chassis" />
            <MudNumericField @bind-Value="@Model.Powertrain" Label="Powertrain" />
            <MudNumericField @bind-Value="@Model.Reliability" Label="Reliability" />

            @if (Manufacturers is not null)
            {
                <MudSelect T="long" @bind-Value="@Model.ManufacturerId" Label="Tyre manufacturer">
                    @foreach (var manufacturer in Manufacturers)
                    {
                        <MudSelectItem Value="manufacturer.Id">@manufacturer.Name</MudSelectItem>
                    }
                </MudSelect>
            }
            
            @if (SeasonEngines is not null)
            {
                <MudSelect T="long" @bind-Value="@Model.SeasonEngineId" Label="Engine">
                    @foreach (var engine in SeasonEngines)
                    {
                        <MudSelectItem Value="engine.Id">@engine.Name</MudSelectItem>
                    }
                </MudSelect>
            }
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] protected MudDialogInstance? TeamDialog { get; set; }

    [Parameter] public long SeasonId { get; set; }
    [Parameter] public List<Team>? Teams { get; set; }
    [Parameter] public List<Manufacturer>? Manufacturers { get; set; }
    [Parameter] public List<SeasonEngine>? SeasonEngines { get; set; }
    [Parameter] public SeasonTeam? SeasonTeam { get; set; }

    private EditSeasonTeamModel Model = new();

    private bool _loading = true;

    protected override void OnInitialized()
    {
        if (SeasonTeam != null)
        {
            Model = new EditSeasonTeamModel(SeasonTeam);
            Model.SeasonId = SeasonId;

            _loading = false;
        }
    }

    private void Submit()
    {
        if (Model.IsDirty)
        {
            var modTeam = Model.Record;
            TeamDialog?.Close(DialogResult.Ok(modTeam));
        }
    }

    private void Cancel() => TeamDialog?.Cancel();
}
