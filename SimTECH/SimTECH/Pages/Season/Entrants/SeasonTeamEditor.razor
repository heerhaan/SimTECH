<MudDialog>
    <TitleContent>
        <MudText>Modify season team</MudText>
    </TitleContent>
    <DialogContent>
        <MudForm Model="@Model">
            @if (Model.Id == 0 && Teams is not null)
            {
                <MudSelect T="long" @bind-Value="@Model.TeamId" Label="Team">
                    @foreach (var team in Teams)
                    {
                        <MudSelectItem Value="team.Id">
                            <CountryFlag Code="team.Country" Size="ElementSize.Tiny" />
                            @team.Name
                        </MudSelectItem>
                    }
                </MudSelect>
            }

            <MudTextField @bind-Value="@Model.Name" Label="Name" Class="field-md" Required />
            <MudTextField @bind-Value="@Model.Principal" Label="Team Principal" Class="field-md" Required />
            <MudColorPicker @bind-Text="@Model.Colour" Label="Colour" Class="field-sm" DisableAlpha="true" />
            <MudColorPicker @bind-Text="@Model.Accent" Label="Accent" Class="field-sm" DisableAlpha="true" />
            <MudNumericField @bind-Value="@Model.BaseValue" Label="BaseValue" Class="field-sm" />
            <MudNumericField @bind-Value="@Model.Aero" Label="Aero" Class="field-sm" />
            <MudNumericField @bind-Value="@Model.Chassis" Label="Chassis" Class="field-sm" />
            <MudNumericField @bind-Value="@Model.Powertrain" Label="Powertrain" Class="field-sm" />
            <MudNumericField @bind-Value="@Model.Reliability" Label="Reliability" Class="field-sm" />

            @if (Manufacturers is not null)
            {
                <MudSelect T="long" @bind-Value="@Model.ManufacturerId" Label="Tyre manufacturer">
                    @foreach (var manufacturer in Manufacturers)
                    {
                        <MudSelectItem Value="manufacturer.Id">@manufacturer.Name</MudSelectItem>
                    }
                </MudSelect>
            }
            
            @if (SeasonEngines is not null)
            {
                <MudSelect T="long" @bind-Value="@Model.SeasonEngineId" Label="Engine">
                    @foreach (var engine in SeasonEngines)
                    {
                        <MudSelectItem Value="engine.Id">@engine.Name</MudSelectItem>
                    }
                </MudSelect>
            }
        </MudForm>
        <MudPaper Height="100px" Class="d-flex flex-column">
            <MudText Typo="Typo.h6" Class="flex-initial">Preview</MudText>
            <div class="flex-auto d-flex justify-center align-center" style="background-color:@(Model.Colour); color:@(Model.Accent)">
                <MudText Class="ma-auto">@Model.Name</MudText>
            </div>
        </MudPaper>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] protected MudDialogInstance? TeamDialog { get; set; }

    [Parameter] public long SeasonId { get; set; }
    [Parameter] public List<Team>? Teams { get; set; }
    [Parameter] public List<Manufacturer>? Manufacturers { get; set; }
    [Parameter] public List<SeasonEngine>? SeasonEngines { get; set; }
    [Parameter] public SeasonTeam? SeasonTeam { get; set; }

    private EditSeasonTeamModel Model;

    protected override void OnInitialized()
    {
        Model = new EditSeasonTeamModel(SeasonTeam);
        Model.SeasonId = SeasonId;
    }

    private void Submit()
    {
        if (Model.IsDirty)
        {
            var modTeam = Model.Record;
            TeamDialog?.Close(DialogResult.Ok(modTeam));
        }
    }

    private void Cancel() => TeamDialog?.Cancel();
}
