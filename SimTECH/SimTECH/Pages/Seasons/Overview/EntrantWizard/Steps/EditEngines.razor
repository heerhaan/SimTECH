<MudContainer MaxWidth="MaxWidth.Small">
    <MudPaper Elevation="15">
        <MudTable T="EditSeasonEngineModel"
                  Items="@Model.SeasonEngines"
                  Hover="true"
                  Class="overflow-hider">
            <HeaderContent>
                <MudTh>Name</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">
                    <MudTextField @bind-Value="@context.Name" Class="field-sm dense-field" />
                </MudTd>
            </RowTemplate>
        </MudTable>
    </MudPaper>
</MudContainer>

@code {
    [CascadingParameter]
    public AddEntrantsModel Model { get; set; }
}
