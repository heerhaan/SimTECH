@inject EngineService _engineService

<MudContainer MaxWidth="MaxWidth.Small">
    <MudPaper Elevation="15">
        <MudText Color="Color.Tertiary">Amount engines: @(Model.BaseEngines.Count)</MudText>
        <MudTable T="Engine"
                  Items="@Engines"
                  @ref="_table"
                  @bind-SelectedItems="Model.BaseEngines"
                  MultiSelection="true"
                  Dense="true"
                  Hover="true">
            <HeaderContent>
                <MudTh>Name</MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Name">@context.Name</MudTd>
            </RowTemplate>
            <PagerContent>
                <MudPagination SelectedChanged="PageChange" Count="@((_table.GetFilteredItemsCount() + _table.RowsPerPage - 1) / _table.RowsPerPage)"
                               Variant="Variant.Outlined"
                               Class="pa-4" />
            </PagerContent>
        </MudTable>
    </MudPaper>
</MudContainer>

@code {
    [CascadingParameter] public AddEntrantsModel Model { get; set; }

    private List<Engine> Engines { get; set; } = new();

    private MudTable<Engine> _table;

    protected override async Task OnInitializedAsync()
    {
        Engines = await _engineService.GetEngines();
    }

    private void PageChange(int index)
    {
        _table.NavigateTo(index - 1);
    }
}
