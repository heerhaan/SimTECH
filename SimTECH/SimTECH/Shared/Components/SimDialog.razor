<MudDialog>
    <DialogContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Class="px-0 pb-2">
            @HeaderContent
        </MudStack>
        <MudPaper Class="px-2">
            @MainContent
        </MudPaper>
    </DialogContent>
</MudDialog>

@code {
    [Parameter]
    public RenderFragment? HeaderContent { get; set; }

    [Parameter]
    public RenderFragment? MainContent { get; set; }
}
