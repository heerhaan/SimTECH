<MudElement HtmlTag="span" Class="tyre" Style="@_styles">
    @ChildContent
</MudElement>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Colour { get; set; } = "red";

    private string _styles
    {
        get
        {
            return $"border-color: {Colour}";
        }
    }
}
