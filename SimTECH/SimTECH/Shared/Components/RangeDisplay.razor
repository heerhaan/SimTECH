<MudStack Row="true"
          Spacing="1"
          Justify="Justify.SpaceBetween"
          AlignItems="AlignItems.Center"
          Class="pa-0">
    <MudText Typo="Typo.caption">@LeftValue</MudText>
    <MudIcon Size="Size.Small" Icon="@Icon" />
    <MudText Typo="Typo.caption">@RightValue</MudText>
</MudStack>

@code {
    [Parameter]
    public int LeftValue { get; set; }

    [Parameter]
    public int RightValue { get; set; }

    [Parameter]
    public string Icon { get; set; } = IconCollection.ArrowMoveHorizontal;
}
