@inherits LayoutComponentBase
@layout MainLayout

<MudLayout>
    <MudPaper Class="mt-10 mb-10" Elevation="15">
        <MudToolBar>
            <MudButton Href="/drivers" Variant="Variant.Filled" StartIcon="@Icons.Material.Outlined.PeopleAlt" Color="Color.Inherit" IconColor="Color.Primary" Size="Size.Large">Drivers</MudButton>
            <MudButton Href="/teams" Variant="Variant.Filled" StartIcon="@Icons.Material.Outlined.CarRepair" Color="Color.Inherit" IconColor="Color.Primary" Size="Size.Large">Teams</MudButton>
            <MudButton Href="/engines" Variant="Variant.Filled" StartIcon="@Icons.Material.Outlined.SettingsInputComponent" Color="Color.Inherit" IconColor="Color.Default" Size="Size.Large">Engines</MudButton>
            <MudButton Href="/tracks" Variant="Variant.Filled" StartIcon="@Icons.Material.Outlined.AddRoad" Color="Color.Inherit" IconColor="Color.Primary" Size="Size.Large">Tracks</MudButton>
            <MudButton Href="/traits" Variant="Variant.Filled" StartIcon="@Icons.Material.Outlined.FlashOn" Color="Color.Inherit" IconColor="Color.Primary" Size="Size.Large">Traits</MudButton>
        </MudToolBar>
    </MudPaper>
    <MudContainer>
        @Body
    </MudContainer>
</MudLayout>
