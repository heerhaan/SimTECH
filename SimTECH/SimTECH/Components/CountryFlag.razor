<MudElement HtmlTag="span" Class="@flagIconClass">
    @flagIcon
</MudElement>

@code {
    [Parameter] public Country Code { get; set; } = Generals.DefaultCountry;
    [Parameter] public ElementSize Size { get; set; } = ElementSize.Normal;
    [Parameter] public string Class { get; set; } = string.Empty;

    private string flagSize
    {
        get
        {
            switch (this.Size)
            {
                case ElementSize.Tiny:
                    return "flag-xs";
                case ElementSize.Small:
                    return "flag-sm";
                case ElementSize.Large:
                    return "flag-lg";
                default:
                    return "flag-md";
            }
        }
    }

    private string flagIconClass
    {
        get
        {
            return $"flag {flagSize}";
        }
    }

    private string flagIcon
    {
        get
        {
            return Code.CountryCodeToEmoji();
        }
    }
}
