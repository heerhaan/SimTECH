<MudStack Row="true" AlignItems="AlignItems.Center" Reverse="@Reverse" Class="pa-0">
    <CountryFlag Code="@Code" Size="@Size" Class="@Class" />
    <MudSpacer />
    <MudText Class="ml-2">@flagNationName</MudText>
</MudStack>

@code {
    [Parameter]
    public Country Code { get; set; }

    [Parameter]
    public FlagSize Size { get; set; } = FlagSize.Normal;

    [Parameter]
    public string Class { get; set; } = string.Empty;

    [Parameter]
    public bool Reverse { get; set; } = false;

    private string flagNationName
    {
        get
        {
            return Code.GetDescription();
        }
    }
}
