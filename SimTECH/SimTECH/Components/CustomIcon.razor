<MudStack Row="true" AlignItems="AlignItems.Center" Class="pa-0" Reverse="@Reverse" Style="@_elementStyles">
    <MudIcon Icon="@Icon" Color="Color.Inherit" />
    @ChildContent
</MudStack>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter, EditorRequired] public string Icon { get; set; } = string.Empty;
    [Parameter] public string? Colour { get; set; }
    [Parameter] public bool Reverse { get; set; }

    private string _elementStyles
    {
        get
        {
            var styles = string.Empty;

            if (!string.IsNullOrWhiteSpace(Colour))
                styles += "color: " + Colour;

            return styles;
        }
    }
}
