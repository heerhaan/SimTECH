<MudStack Row="true" Spacing="1" Class="align-center">
    <MudIcon Size="Size.Medium" Icon="@_icon" Color="@_iconColour" Style="@_style" />
    <MudText Typo="Typo.subtitle1" Color="@_iconColour">@_gridDisplay</MudText>
</MudStack>

@code {
    [Parameter] public int Change { get; set; }

    private string _icon {
        get
        {
            if (Change > 0)
                return IconCollection.ArrowUp;
            if (Change < 0)
                return IconCollection.ArrowDown;

            return IconCollection.Equal;
        }
    }

    private Color _iconColour
    {
        get
        {
            if (Change > 0)
                return Color.Success;
            if (Change < 0)
                return Color.Error;

            return Color.Warning;
        }
    }

    private string _style
    {
        get
        {
            if (Change == 0)
                return "color:black";

            return string.Empty;
        }
    }

    private int _gridDisplay => Change < 0 ? Change * -1 : Change;
}
