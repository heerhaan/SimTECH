<MudContainer>
    @ChildContent
    <MudTable Items="@Items" Dense="true">
        <HeaderContent>
            <MudTh>Comparer</MudTh>
            <MudTh>Minimum</MudTh>
            <MudTh>Maximum</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Comparer">
                <MudNumericField @bind-Value="@context.Comparer" />
            </MudTd>
            <MudTd DataLabel="Minimum">
                <MudNumericField @bind-Value="@context.Minimum" />
            </MudTd>
            <MudTd DataLabel="Maximum">
                <MudNumericField @bind-Value="@context.Maximum" />
            </MudTd>
        </RowTemplate>
        <FooterContent>
            <MudTFootRow>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Add" Color="Color.Tertiary" OnClick="AppendRangeRow"></MudIconButton>
                </MudTd>
            </MudTFootRow>
        </FooterContent>
    </MudTable>
</MudContainer>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public IList<EditRangeModel> Items { get; set; } = new List<EditRangeModel>();
    [Parameter] public RangeType RangeType { get; set; }
    
    private void AppendRangeRow()
    {
        Items.Add(new EditRangeModel()
            {
                Type = RangeType,
                Comparer = 10,
                Minimum = -2,
                Maximum = 2
            });
    }
}
