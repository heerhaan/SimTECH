<MudPaper Class="py-1 px-2" Style="@_styles">
    <MudText Typo="Typo">@ChildContent</MudText>
</MudPaper>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public string Colour { get; set; } = Globals.DefaultColour;
    [Parameter] public string Accent { get; set; } = Globals.DefaultAccent;
    [Parameter] public Typo Typo { get; set; } = Typo.caption;

    private string _styles
    {
        get
        {
            return $"background-color:{Colour};color:{Accent}";
        }
    }
}
