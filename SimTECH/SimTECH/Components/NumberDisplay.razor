<MudPaper Class="py-1 px-2" Style="@_styles">
    <MudText Typo="Typo.caption">@ChildContent</MudText>
</MudPaper>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    [Parameter]
    public string Colour { get; set; } = Constants.DefaultColour;
    [Parameter]
    public string Accent { get; set; } = Constants.DefaultAccent;

    private string _styles
    {
        get
        {
            return $"background-color:{Colour};color:{Accent}";
        }
    }
}
